<tr id="<%=dom_id system %>" class="odd:bg-gray-100 hover:bg-blue-100">
  <th scope="row" class="py-4 px-6 font-medium text-gray-900 whitespace-nowrap dark:text-white">
    <%= link_to system.name, system %>
  </th>
  <td class="py-4 px-6">
    <%= system.sites.size %>
  </td>
  <td class="py-4 px-6">
    <%= system.current_pages %>
  </td>
  <td class="py-4 px-6">
    <%= system.current_overall_score %>%
  </td>
  <td class="py-4 px-6">
    <%= system.current_broken_links %>
  </td>
  <td class="py-4 px-6">
    <%= system.current_accessibility_issues %>
  </td>
  <td class="py-4 px-6">
    <%= system.current_misspellings %>
  </td>
  <td class="py-4 px-6">
    <%= system.notes %>
  </td>
  <% if user_signed_in? %>
    <td class="py-4 px-6">
      <%= link_to 'Edit', edit_system_path(system),                   class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    </td>
  <% end %>
</tr>