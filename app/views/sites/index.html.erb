<div class="w-full">

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl text-blue-500">Sites</h1>
    <%= link_to 'New site', new_site_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" if user_signed_in? %>
    <%= form_tag import_csv_sites_path, multipart: true do %>
      <label class="flex">
        <%= file_field_tag :sites_file, class: "block w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 cursor-pointer dark:text-gray-400 focus:outline-none dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400" %>
        <%= submit_tag :upload, class: "text-sm rounded-lg py-3 px-5 bg-blue-600 text-white" %>
      </label>
    <% end if user_signed_in? %>
  </div>

  <div id='sites' class="mt-5">
    <%= render partial: 'sites', locals: { sites: @sites } %>
  </div>
</div>
